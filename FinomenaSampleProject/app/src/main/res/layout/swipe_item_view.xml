<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:background="@drawable/circular_shape_back"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/housekeeper_img" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="The Question Number is 1?"
                android:textSize="18sp" />

            <com.animelabs.finomenasampleproject.library.RippleView
                android:id="@+id/rippleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rv_centered="true"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Yes"
                android:background="@drawable/rect_background"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"
                android:textSize="16sp" />
</com.animelabs.finomenasampleproject.library.RippleView>

            <com.animelabs.finomenasampleproject.library.RippleView
                android:id="@+id/rippleView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rv_centered="true"
                android:layout_below="@+id/rippleView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't Know"
                    android:background="@drawable/rect_background"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </com.animelabs.finomenasampleproject.library.RippleView>

            <com.animelabs.finomenasampleproject.library.RippleView
                android:id="@+id/rippleView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rv_centered="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rippleView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="No"
                android:background="@drawable/rect_background"
                android:textAllCaps="false"
                android:layout_below="@+id/button"
                android:textSize="16sp"

                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button" />

            </com.animelabs.finomenasampleproject.library.RippleView>

            <TextView
                android:text="Select any one of these Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>